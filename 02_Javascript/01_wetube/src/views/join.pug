extends base.pug

block content
  if errorMessage
    span=errorMessage
  form(method="POST")
    span email
      input(placeholder="email", name="email", type="email", required)
    span username
      input(placeholder="username", name="username", type="text", required)
    span password
      input(placeholder="password", name="password", type="password", required)
    span password2
      input(placeholder="password2", name="password2", type="password", required)
    span name
      input(placeholder="name", name="name", type="text", required)
    span localtion
      input(placeholder="localtion", name="localtion", type="text", required)
    input(type="submit", value="JOIN")
    hr
    div
      span 이미 계정이 있으신가요?
      a(href="/login") Login now &rarr;